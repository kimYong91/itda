<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FindUserNameActivity"
    android:padding="40dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="아이디 찾기"
        android:textSize="22sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="이메일을 입력하세요"
        />

    <EditText
        android:id="@+id/editDateOfBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="생년월일을 입력하세요 (1900-00-00)"
        android:maxLength="10"
        />

    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="휴대폰 번호를 입력하세요 ('-'생략)"
        android:maxLength="11"
        />


    <TextView
        android:id="@+id/textFindingUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="end"
        android:text="아이디 찾기"
        android:textStyle="bold"
        android:padding="15dp"
        android:background="@drawable/round"
        android:gravity="center_horizontal"
        />



    <TextView
        android:id="@+id/textFindUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:text="아이디"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="end"
        android:text="나가기"
        android:textStyle="bold"
        android:padding="15dp"
        android:background="@drawable/round"
        android:gravity="center_horizontal"
        />
</LinearLayout>
